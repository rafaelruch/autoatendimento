# ===========================================
# CONFIGURAÇÃO DE PRODUÇÃO - AUTO ATENDIMENTO
# ===========================================

# Database (PostgreSQL)
# Em produção, use uma URL segura com SSL
DATABASE_URL="postgresql://user:password@localhost:5432/autoatendimento?schema=public"

# JWT Secret (IMPORTANTE: gere uma chave forte em produção)
# Use: openssl rand -base64 32
JWT_SECRET="sua-chave-secreta-aqui-minimo-32-caracteres"

# Server
PORT=3001
NODE_ENV="production"

# URLs (ajuste para seu domínio em produção)
FRONTEND_URL="https://seu-dominio.com.br"
BACKEND_URL="https://api.seu-dominio.com.br"

# ===========================================
# PAGAMENTOS - MERCADO PAGO
# ===========================================
# Obtenha em: https://www.mercadopago.com.br/developers/panel/app
MERCADOPAGO_ACCESS_TOKEN="seu-access-token-aqui"
MERCADOPAGO_PUBLIC_KEY="sua-public-key-aqui"

# Mercado Pago Point (Maquininha) - Opcional
# Para integração com maquininha física
MERCADOPAGO_DEVICE_ID=""
MERCADOPAGO_POINT_ENABLED="false"

# ===========================================
# PAGAMENTOS - PAGBANK (PagSeguro)
# ===========================================
# Obtenha em: https://developer.pagbank.com.br/
PAGBANK_TOKEN=""
PAGBANK_EMAIL=""
PAGBANK_ENABLED="false"

# PagBank Point (Maquininha) - Opcional
# Para integração com maquininha Moderninha
PAGBANK_POINT_DEVICE_SERIAL=""
PAGBANK_POINT_ENABLED="false"

# ===========================================
# CONFIGURAÇÃO DE UPLOAD
# ===========================================
UPLOAD_MAX_SIZE_MB=5
UPLOAD_DIR="uploads"
